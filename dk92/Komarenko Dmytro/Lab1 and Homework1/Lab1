#include <stdio.h>
#include <stdlib.h>

int main()
{
    int a,b;
    start:
    printf("Hello!\nThis is laboratory work #1 fulfilling the condition of option 7:\n\n\tQ=A!/|2*A+B|\n\nWarning!\nActions are performed with integers.\nEnter an integer 'A' between 0 and 10 inclusive:");
    starta:
    scanf("%d",&a);
    if(a<0||a>10)
    {
        printf("Invalid value.");
        goto starta;
    }
    printf("Enter an integer 'B' between -100000000 and +100000000 inclusive:");
    startb:
    scanf("%d",&b);
    if(b<-100000000||b>100000000)
    {
        printf("Invalid value.");
        goto startb;
    }
    printf("A=%d, B=%d\n", a,b);
    printf("Q=%d\n",division(factorial(a),module(sum(multiplication(2,a),b))));
    return 0;
}
factorial(int n)
{
    return (n<2)?1:n*factorial(n-1);
}
module(int n)
{
    return (n<0)?-n:n;
}
multiplication (int x,int y)
{
    return x*y;
}
division (int x,int y)
{
    if(y!=0)
        return x/y;
    else
        {
            printf("Invalid value - division by zero %d.\nGo to the beginning of the program ...\n\n",y);
            return main();
        }
}
sum (int x,int y)
{
    return x+y;
}
